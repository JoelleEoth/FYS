  font = createFont ("Arial", 32, true);   

  //Hud, timers, score, lives, Air level, Bannanas--------------------------------------------------------------------------------------------------------------------------------------------------------

  //timer-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
  fill(255);
  int timer =millis();
  timer/= 1000;
  textFont(font, 36);
  text("Time: "+timer, width/25, height/15);

  //score-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
  text("Score: "+score, width*5/6, height/15);
}
